<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/equation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/num"
        android:layout_below="@+id/equation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity"
        android:selectAllOnFocus="true" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/b_clear"
            android:layout_row="0"
            android:layout_column="0"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/b_percent"
            android:layout_row="0"
            android:layout_column="1"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;-"
            android:id="@+id/b_bspace"
            android:layout_row="0"
            android:layout_column="2"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:id="@+id/b_div"
            android:layout_row="0"
            android:layout_column="3"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/b7"
            android:layout_row="1"
            android:layout_column="0"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/b8"
            android:layout_row="1"
            android:layout_column="1"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/b9"
            android:layout_row="1"
            android:layout_column="2"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ร"
            android:id="@+id/b_times"
            android:layout_row="1"
            android:layout_column="3"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/b4"
            android:layout_row="2"
            android:layout_column="0"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/b5"
            android:layout_row="2"
            android:layout_column="1"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/b6"
            android:layout_row="2"
            android:layout_column="2"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/b_minus"
            android:layout_row="2"
            android:layout_column="3"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/b1"
            android:layout_row="3"
            android:layout_column="0"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/b2"
            android:layout_row="3"
            android:layout_column="1"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/b3"
            android:layout_row="3"
            android:layout_column="2"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/b_plus"
            android:layout_row="3"
            android:layout_column="3"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:id="@+id/b_sign"
            android:layout_row="4"
            android:layout_column="0"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/b0"
            android:layout_row="4"
            android:layout_column="1"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/b_point"
            android:layout_row="4"
            android:layout_column="2"
            android:width="50dp"
            android:height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/b_equals"
            android:layout_row="4"
            android:layout_column="3"
            android:width="50dp"
            android:height="80dp" />

    </GridLayout>
</RelativeLayout>
